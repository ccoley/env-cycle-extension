{
    "manifest_version": 2,
    "name": "Browser Environment Switcher",
    "short_name": "Env Switch",
    "version": "0.2",
    "description": "This extension cycles the current tab between three development environments: local, staging, live, local, ...",
    "icons": {
        "16": "icon-19x19.png",
        "128": "icon-128x128-padded8px.png"
    },
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "icon-19x19.png",
        "default_title": "Cycle between environments"
    },
    "background": {
        "scripts" : ["cycle.js"],
        "persistent": false
    }
}
